/*A data analytics tool finds the maximum sales figure from multiple entries.
Implement a solution to accept ‘n’ numbers and display the largest.*/
#include<iostream>
using namespace std;
int main(){
    int n, i=0;
    cout<<"Enter the no. of entries: ";
    cin>>n;
    int a[n];
    cout<<"Enter the numbers: ";
    while(i<n){
        cin>>a[i];
        i++;}
        int max=a[0];
        for(i=1; i<n; i++){
            if(max<=a[i])
            max=a[i];
        }
        cout<<"The largest no. from the entries is "<<max;
    return 0;
}
