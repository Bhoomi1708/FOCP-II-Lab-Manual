/*A String-matching tool validates if IDs are palindromes. Implement a solution to check whether a given ID is a palindrome.*/
#include<iostream>
#include<string>
using namespace std;
int main(){
    string s;
    cout<<"ENTER ID: ";
    cin>>s;
    int i;
    int j= s.length()-1;
    int flag=1;
    for(i=0; i<j; i++, j--){
        if(s[i]==s[j])
        flag=1;
        else
        {flag=0;
        break;}
    }
    if(flag==1)
    cout<<"ID is a palindrome";
    else
    cout<<"ID is not a palindrome";
    return 0;
}
