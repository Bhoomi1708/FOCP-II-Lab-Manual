//Student Record System
#include<iostream>
using namespace std;
class Student{
    string rollNo;
	string name;
	int marks1;
	int marks2;
	int marks3;
    public:
    void inputDetails(){
        cin>>rollNo>>name>>marks1>>marks2>>marks3;
    }
    void displayDetails(){
        cout<<"\nRoll no.: "<<rollNo<<"\nName: "<<name<<"\nMarks of subject 1: "<<marks1;
        cout<<"\nMarks of subject 2: "<<marks2<<"\nMarks of subject 3: "<<marks3;
    }
    int calculateTotal(){
        int total= marks1+ marks2+ marks3;
        cout<<"\nTOTAL: "<<total;
    }

};
int main(){
    Student s1;
    cout<<"Enter your roll no., name, Marks of subject 1, 2 and 3: \n";
    s1.inputDetails();
    s1.displayDetails();
    s1.calculateTotal();
}
