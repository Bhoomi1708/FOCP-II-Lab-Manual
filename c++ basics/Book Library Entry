//Book Library Entry
#include<iostream>
using namespace std;
class Book{
    string title; string author; double price;
    public:
    void inputDetails(){
    cout<<"\nEnter the book title: "; getline(cin,title);
    cout<<"Enter the name of author: ";
    cin.ignore();
    getline(cin,author);
    cout<<"Enter the book price: "; cin>>price;
}
	void displayDetails(){
    cout<<"\nBook title: "<<title<<"\nAuthor: "<<author<<"\nBook price: "<<price;
}
};
int main(){
    Book b1;
    cout<<"Enter book details- ";
    b1.inputDetails();
    b1.displayDetails();
    return 0;
}
