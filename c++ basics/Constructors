//Constructors
#include<iostream>
using namespace std;
class Rectangle{
    float length;
	float width;
    public:
	float calculateArea();
	float calculatePerimeter();
    Rectangle();
    Rectangle(int);
    Rectangle(int, int);
    void display();
};
Rectangle::Rectangle(){
    length=width=0;
}
Rectangle::Rectangle(int n){
    length=width=n;
}
Rectangle::Rectangle(int l, int w){
    length=l; width=w;
}
float Rectangle::calculateArea(){
    return length*width;
}
float Rectangle::calculatePerimeter(){
    return 2*length+2*width;
}
void Rectangle::display(){
    cout<<"\nlength: "<<length;
    cout<<"\nwidth: "<<width;
    cout<<"\nArea: "<<calculateArea();
    cout<<"\nPerimeter: "<<calculatePerimeter();
}
int main(){
    Rectangle r1, r2(2), r3(2,3);
    r1.display();
    r2.display();
    r3.display();
    return 0;
}
